{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/.vscode/app.py",
                "--server.port",
                "8080"
            ],
            "justMyCode": true
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "\"C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe\""
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "\"C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe\""
        }
    ]
} 